echo -e "$COLOR1$NC  ${WH}5.${NC} ${COLOR1}Set Auto-Reboot 1 Week Period ${NC}"
echo -e "$COLOR1$NC  ${WH}6.${NC} ${COLOR1}Set Auto-Reboot 1 Month Period ${NC}"
echo -e "$COLOR1$NC  ${WH}7.${NC} ${COLOR1}Deactivate Auto-Reboot ${NC}"
