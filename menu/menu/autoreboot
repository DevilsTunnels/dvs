echo -e "$COLOR1$NC  ${WH}9.${NC} ${COLOR1}Delete Reboot Log${NC}"
echo -e "$COLOR1$NC "
echo -e "$COLOR1$NC  ${WH}0.${NC} ${COLOR1}BACK TO EXIT MENU ${NC}"
echo -e "$COLOR1╚═════════════════════════════════════════╝${NC}"
echo
read -p " Select menu : " opt
echo -e ""
case $opt in
1 | 01)
clear
echo "59 * * * * root /usr/local/bin/reboot_otomatis" > /etc/cron.d/reboot_otomatis
